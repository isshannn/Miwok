<resources>
        <!-- Base application theme. -->
        <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
            <item name="colorPrimary">@color/primary_color</item>
            <item name="colorPrimaryDark">@color/primary_dark_color</item>
        </style>


        <!-- Style for Image in list_item.xml -->
        <style name="List_Image">
            <item name="android:layout_width">88dp</item>
            <item name="android:layout_height">88dp</item>
            <item name="android:background">@color/tan_background</item>
        </style>

        <!-- Style for Tabs in activity_main -->
        <style name="Tabs_Theme">
            <item name="android:layout_width">match_parent</item>
            <item name="android:layout_height">wrap_content</item>
            <item name="android:background">@color/primary_color</item>
        </style>

        <!-- Style for TextViews in list_item.xml -->
        <style name="List_Text">
            <item name="android:paddingLeft">16dp</item>
            <item name="android:layout_height">44dp</item>
            <item name="android:layout_width">match_parent</item>
            <item name="android:textSize">18sp</item>
            <item name="android:textColor">#FAFAFA</item>
        </style>


</resources>