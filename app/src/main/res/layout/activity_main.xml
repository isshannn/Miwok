<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/tan_background"
    android:orientation="vertical"
    tools:context="com.example.android.miwok.MainActivity">


    <!-- Creates a TabLayout for fragment to be displayed -->
    <com.google.android.material.tabs.TabLayout
        android:id="@+id/sliding_tabs"
        style="@style/Tabs_Theme"
        app:tabSelectedTextColor="@color/TabActiveText"
        app:tabTextColor="@color/TabInactiveText"
        app:tabMode="fixed" />


    <!-- Creates viewPager so as to switch between fragments -->
    <androidx.viewpager.widget.ViewPager
        android:id="@+id/viewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>
